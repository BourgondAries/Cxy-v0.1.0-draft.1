#cxy start

    // Look for while
    push x
    cp x "while "
    find x

    // Store the pointer to the begin:
    push Whileptr
    mov Whileptr pointer

    // Put newline and space in registers
    push y
    cp y " "
    push z
    cp z "
"

    // Check for the boolean target
    :loop
        next
        eq next y
        if eq
        begin
            goto out
        end
        eq next z
        if eq
        begin
            goto out
        end
    goto loop
    :out

    // Move the pointer to the boolean target's start
    push tmp
    cp tmp "6"
    add pointer tmp
    pop tmp

    capt
    show capt




#cxy stop
